<div class="modal fade" id="modalAdicionar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Adicionar Produto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formProduto">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="Nome">Nome</label>
                            <input type="text" placeholder="Nome" id="Nome" class="form-control" size="20" name="Nome" />
                        </div>
                        <div class="col-md-6">
                            <label for="Nome">Descrição</label>
                            <input type="text" placeholder="Descrição" id="Descricao" class="form-control" size="50" name="Descricao" />
                        </div>
                        <div class="col-md-6">
                            <label for="PrecoAnterior">Preço Anterior</label>
                            <input type="text" placeholder="Preço Anterior" id="PrecoAnterior" class="form-control" name="PrecoAnterior" />
                        </div>
                        <div class="col-md-6">
                            <label for="Nome">Preço</label>
                            <input type="text" placeholder="Preço" id="Preco" class="form-control" name="Preco" />
                        </div>
                        <div class="col-md-6">
                            <label for="IdCategoria">Categoria</label>

                            <select id="IdCategoria" class="form-control" name="IdCategoria">
                                <option value="">Selecione...</option>
                                @foreach (var item in ViewBag.Categorias)
                                {
                                    <option value="@item.Id">@item.Descricao</option>
                                }
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" onclick="adicionar()">Adicionar</button>
            </div>
        </div>
    </div>
</div>

